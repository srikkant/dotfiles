[
    {
        "context": "(VimControl || EmptyPane) && !menu",
        "bindings": {
            "g f": "file_finder::Toggle",
            "g b": "tab_switcher::Toggle",
            "ctrl-`": "workspace::ToggleBottomDock",
            "'": "workspace::ToggleLeftDock"
        }
    },
    {
        "context": "VimControl && !menu",
        "bindings": {
            "g F": "editor::OpenFile",
            "g e": "diagnostics::Deploy",
            "g r": "editor::FindAllReferences"
        }
    },
    {
        "context": "Terminal",
        "bindings": {
            "ctrl-`": "workspace::ToggleBottomDock"
        }
    },
    {
        "context": "ProjectPanel && not_editing",
        "bindings": {
            "'": "workspace::ToggleLeftDock",
            "o": ["workspace::SendKeystrokes", "t '"]
        }
    },
    {
        "context": "showing_completions",
        "bindings": {
            "ctrl-y": "editor::ConfirmCompletion"
        }
    },
    {
        "context": "Editor && mode == full",
        "bindings": {
            "enter": "editor::OpenExcerpts"
        }
    },
    {
        "context": "TabSwitcher",
        "bindings": {
            "x": "tab_switcher::CloseSelectedItem"
        }
    }
]
