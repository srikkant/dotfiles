{
  "ui_font_family": ".SystemUIFont",
  "agent": {
    "always_allow_tool_actions": true,
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5"
    }
  },
  "buffer_font_family": "SF Mono",
  "format_on_save": "on",
  "buffer_font_size": 12,
  "buffer_line_height": "standard",
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "languages": {
    "YAML": {
      "formatter": "prettier"
    },
    "JSON": {
      "formatter": "prettier"
    },
    "TypeScript": {
      "formatter": "prettier"
    },
    "TSX": {
      "formatter": "prettier"
    },
    "Markdown": {
      "formatter": "prettier"
    }
  },
  "indent_guides": {
    "enabled": false
  },
  "relative_line_numbers": true,
  "theme": {
    "dark": "Alabaster Dark BG",
    "light": "Alabaster BG",
    "mode": "system"
  },
  "tab_bar": {
    "show": false
  },
  "terminal": {
    "line_height": "standard"
  },
  "ui_font_size": 13,
  "unstable.ui_density": "compact",
  "vim_mode": true
}
