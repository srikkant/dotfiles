{
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5"
    }
  },
  "format_on_save": "language_server",
  "buffer_font_size": 12.5,
  "buffer_line_height": "standard",
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "languages": {
    "YAML": {
      "format_on_save": "prettier",
      "formatter": "prettier"
    },
    "JSON": {
      "format_on_save": "prettier",
      "formatter": "prettier"
    },
    "TypeScript": {
      "format_on_save": "prettier",
      "formatter": "prettier"
    },
    "TSX": {
      "format_on_save": "prettier",
      "formatter": "prettier"
    }
  },
  "indent_guides": {
    "enabled": false
  },
  "relative_line_numbers": true,
  "theme": {
    "dark": "Rosé Pine",
    "light": "Rosé Pine Dawn",
    "mode": "system"
  },
  "tab_bar": {
    "show": false
  },
  "terminal": {
    "line_height": "standard",
    "font_size": 13
  },
  "ui_font_size": 14,
  "vim_mode": true
}
