layout {

    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="file:/Users/srikkant/.bin/zjstatus.wasm" {
                format_left  "{mode} {command_git_branch} {tabs}"
                format_right ""
                format_space ""

                border_enabled  "false"

                mode_normal  "#[bg=blue] "
                mode_tmux    "#[bg=#ffc387] "

                tab_normal   "#[fg=#6C7086] {name} "
                tab_active   "#[fg=blue,bold] {name} "

                command_git_branch_command   "git rev-parse --abbrev-ref HEAD"
                command_git_branch_format    "#[fg=red] îœ¥ {stdout} "
                command_git_branch_interval  "10"
            }
        }
    }

    tab name="explorer" focus=true {
        pane command="lf" {
            args "-config" "/Users/srikkant/.config/lf/lfrc-ide"
        }
    }

    tab name="editor" {
        pane command="hx"
    }

    tab name="workspace" {
        pane
    }

}
